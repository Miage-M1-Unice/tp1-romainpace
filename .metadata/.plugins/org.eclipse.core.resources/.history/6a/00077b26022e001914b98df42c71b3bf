package fr.unice.miage.tp1;

import java.io.File;
import java.io.FilenameFilter;

public class Repertoire implements FilenameFilter {
	//private File file;

	public Repertoire() {
		
	}
	
	private void parcoursAvance(File file) {
		File[] listeFichier2 = file.listFiles();
		for (File rep : listeFichier2)
		{
			if (rep.isDirectory())
				parcoursAvance(rep);
			else
				System.out.println(rep);
		}
	}

	public static void main(String[] args) {
		Filtre filtre;
		Repertoire repertoire;
		
		//Question 1 :
		
		String repertoire= ".";
		File file = new File(repertoire);
		String[] listeFichier = file.list();
		
		for (int i=0; i<listeFichier.length; i++)
		{
			System.out.println(listeFichier[i]);
		}
		
		//Question 2 :

		
		repertoire.parcoursAvance(file);
		
		/*
		for (int i=0; i<listeFichier2.length; i++)
		{
			System.out.println(listeFichier2[i]);
		}
		*/
		
		
		//Question 3 :
		
		

	}

	@Override
	public boolean accept(File dir, String name) {
		// TODO Auto-generated method stub
		return false;
	}

}
